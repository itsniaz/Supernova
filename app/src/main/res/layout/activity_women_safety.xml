<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ActivityWomenSafety">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/container_eveteasing"
                android:layout_width="306dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/comic_teasing"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:background="@android:color/white"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:text="Safety From Eve Teasing"
                        />



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/container_domestic_violance"
                android:layout_width="306dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/comic_domestic_violance_2"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:background="@android:color/white"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:text="Safety From Domestic Violence"
                        />





                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/container_rad"
                android:layout_width="306dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/rad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:background="@android:color/white"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:text="Rape Aggression Defense (RAD)"
                        />





                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </LinearLayout>

</ScrollView>